    <field name="title">Gefahr durch Gasbohrungen - Fracking!</field>
    <field name="date">3 Jahrs 1 Monat 13 Tagen 12:45:44</field>
    <field name="area">Umwelt, Verkehr, Energie</field>
    <field name="regelwerk">Programmantrag </field>
