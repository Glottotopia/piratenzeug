    <field name="title">Anwendung eines Integritätspaktes</field>
    <field name="date">4 Jahrs 4 Monaten 14 Tagen 15:19:57</field>
    <field name="area">Innen, Recht, Demokratie, Sicherheit</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">award_star_silver_2.png</field>
    <field name="yes">264</field>
