    <field name="title">Umwandlung des Positionspapiers zu §173</field>
    <field name="date">3 Jahrs 3 Monaten 8 Tagen 19:47:48</field>
    <field name="area">Kinder, Jugend, Familie und Bildung</field>
    <field name="regelwerk">Programmantrag </field>
