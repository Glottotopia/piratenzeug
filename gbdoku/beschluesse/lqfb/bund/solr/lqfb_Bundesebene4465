    <field name="title">Satzungsänderung Schiedsgerichtsordnung Verwaltungsprozessrecht statt Zivilprozessrecht</field>
    <field name="date">2 Jahrs 4 Monaten 29 Tagen 00:12:45</field>
    <field name="area">Sonstige innerparteiliche Angelegenheiten</field>
    <field name="regelwerk">sonstiger Parteitagsbeschluss </field>
    <field name="result">award_star_silver_2.png</field>
    <field name="yes">72</field>
