    <field name="title">Positionspapier gegen Fracking</field>
    <field name="date">1 Jahr 7 Monaten 20 Tagen 16:45:47</field>
    <field name="area">[SH] Politische Themen</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
