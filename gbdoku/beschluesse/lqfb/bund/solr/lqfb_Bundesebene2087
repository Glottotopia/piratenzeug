    <field name="title">Unterstützung des Projekts &quot;Europäische Bürgerinitiative&quot;</field>
    <field name="date">3 Jahrs 3 Monaten 18 Tagen 11:46:51</field>
    <field name="area">Außen, Internationales, Frieden</field>
    <field name="regelwerk">Schnellverfahren </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">291</field>
    <field name="no">27</field>
