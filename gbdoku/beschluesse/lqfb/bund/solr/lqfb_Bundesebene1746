    <field name="title">Piratenappell pro Europa</field>
    <field name="date">3 Jahrs 3 Monaten 23 Tagen 09:46:28</field>
    <field name="area">Außen, Internationales, Frieden</field>
    <field name="regelwerk">sonstiger Parteitagsbeschluss </field>
