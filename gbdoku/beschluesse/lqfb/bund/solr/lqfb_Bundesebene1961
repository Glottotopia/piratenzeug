    <field name="title">Notenfreie Schulen</field>
    <field name="date">3 Jahrs 3 Monaten 2 Tagen 09:51:25</field>
    <field name="area">Kinder, Jugend, Familie und Bildung</field>
    <field name="regelwerk">Programmantrag </field>
