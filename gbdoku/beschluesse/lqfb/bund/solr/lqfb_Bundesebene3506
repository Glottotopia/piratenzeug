    <field name="title">Widerspruchsregelung bei postmortalen Organspenden</field>
    <field name="date">2 Jahrs 6 Monaten 25 Tagen 01:59:11</field>
    <field name="area">Gesundheit und Drogen/Suchtpolitik</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">588</field>
