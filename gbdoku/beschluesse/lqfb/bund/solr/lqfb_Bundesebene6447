    <field name="title">Menschenhandel und Sklaverei in Liefererketten offenlegen</field>
    <field name="date">1 Jahr 3 Monaten 29 Tagen 14:08:21</field>
    <field name="area">Europa</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">award_star_gold_2.png</field>
