    <field name="title">Schaffung einer Presseschnittstelle zu LQFB</field>
    <field name="date">3 Jahrs 3 Monaten 23 Tagen 05:43:20</field>
    <field name="area">LiquidFeedback Weiterentwicklung</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">cross.png</field>
    <field name="yes">157</field>
    <field name="no">42</field>
