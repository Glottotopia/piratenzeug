    <field name="title">Namenshistorie beibehalten; 'richtiger' Pseudonymwechsel nur außerhalb des Systems möglich</field>
    <field name="date">4 Jahrs 4 Monaten 25 Tagen 20:38:36</field>
    <field name="area">LiquidFeedback Systembetrieb</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">255</field>
