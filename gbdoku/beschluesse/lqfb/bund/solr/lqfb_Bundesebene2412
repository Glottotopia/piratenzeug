    <field name="title">Alternativen zum Krieg in Afghanistan 18 Punkte-Vorschlag</field>
    <field name="date">3 Jahrs 11 Tagen 20:37:22</field>
    <field name="area">Außen, Internationales, Frieden</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">cross.png</field>
    <field name="yes">206</field>
