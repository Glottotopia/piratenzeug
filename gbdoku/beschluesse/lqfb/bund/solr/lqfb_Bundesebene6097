    <field name="title">Programmänderungsantrag zu 15.4 Bäuerliche Nutztierhaltung - Transparent, wettbewerbsfähig und zukunftsweisend</field>
    <field name="date">1 Jahr 10 Monaten 27 Tagen 13:41:40</field>
    <field name="area">Umwelt, Verkehr, Energie</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">cross.png</field>
    <field name="yes">136</field>
