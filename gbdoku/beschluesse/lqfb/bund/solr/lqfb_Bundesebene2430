    <field name="title">Ersatz des konfessionellen Religionsunterrichts durch neutralen Ethik- und Weltanschauungsunterricht</field>
    <field name="date">2 Jahrs 10 Monaten 27 Tagen 18:33:53</field>
    <field name="area">Kinder, Jugend, Familie und Bildung</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">award_star_silver_2.png</field>
    <field name="yes">507</field>
    <field name="no">172</field>
