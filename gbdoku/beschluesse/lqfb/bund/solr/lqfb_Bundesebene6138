    <field name="title">Geist des Grundgesetzes wiederbeleben - Kein Krieg von deutschem Boden</field>
    <field name="date">1 Jahr 10 Monaten 27 Tagen 13:51:20</field>
    <field name="area">Außen, Internationales, Frieden</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">cross.png</field>
    <field name="yes">182</field>
