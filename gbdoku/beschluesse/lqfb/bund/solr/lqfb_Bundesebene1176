    <field name="title">Umfassende Reform der Mitgliedsbeitragsregelungen / Mitgliedsbeitrag selbst bestimmen</field>
    <field name="date">4 Jahrs 4 Monaten 3 Tagen 09:35:55</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Satzungsänderung </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">243</field>
