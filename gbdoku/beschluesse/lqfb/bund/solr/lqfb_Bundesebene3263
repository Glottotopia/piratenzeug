    <field name="title">Keine Quotierung nach Geschlecht bei Listenaufstellungen</field>
    <field name="date">2 Jahrs 8 Monaten 12 Tagen 12:56:16</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_silver_2.png</field>
