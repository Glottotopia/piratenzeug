    <field name="title">Karenzzeiten für Politiker und Beamte</field>
    <field name="date">4 Jahrs 4 Monaten 25 Tagen 02:44:03</field>
    <field name="area">Innen, Recht, Demokratie, Sicherheit</field>
    <field name="regelwerk">Programmantrag </field>
