    <field name="title">Schuldenschnitt als Alternative zum ESM [Projektgruppe ESM]</field>
    <field name="date">2 Jahrs 4 Monaten 6 Tagen 12:40:39</field>
    <field name="area">Arbeit und Soziales</field>
    <field name="regelwerk">Programmantrag </field>
