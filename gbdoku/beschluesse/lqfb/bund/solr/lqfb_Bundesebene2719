    <field name="title">Freier und kostenloser Zugang zu Sprachkursen</field>
    <field name="date">2 Jahrs 8 Monaten 23 Tagen 01:37:46</field>
    <field name="area">Innen, Recht, Demokratie, Sicherheit</field>
    <field name="regelwerk">Programmantrag </field>
