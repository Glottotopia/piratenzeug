    <field name="title">Einführung eines Lobbyisten-Registers</field>
    <field name="date">4 Jahrs 4 Monaten 26 Tagen 01:27:29</field>
    <field name="area">Innen, Recht, Demokratie, Sicherheit</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">award_star_gold_2.png</field>
