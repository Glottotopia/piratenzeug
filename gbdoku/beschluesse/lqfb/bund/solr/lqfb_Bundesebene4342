    <field name="title">Für eine freiwillige und selbstbestimmte Sexarbeit</field>
    <field name="date">2 Jahrs 5 Monaten 10 Tagen 20:46:05</field>
    <field name="area">Arbeit und Soziales</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
