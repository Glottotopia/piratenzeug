    <field name="title">Unterstützerquorum für Listenkandidaten</field>
    <field name="date">2 Jahrs 9 Monaten 3 Tagen 12:10:52</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Satzungsänderung </field>
