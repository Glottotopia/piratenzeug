    <field name="title">Europa auf Prinzipien aufbauen</field>
    <field name="date">1 Jahr 11 Monaten 22 Tagen 15:07:37</field>
    <field name="area">Europa</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
