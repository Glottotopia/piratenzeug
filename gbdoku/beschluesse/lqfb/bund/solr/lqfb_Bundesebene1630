    <field name="title">Positionspapiere müssen Abschnitt des Grundsatzprogramms benennen</field>
    <field name="date">3 Jahrs 4 Monaten 20 Tagen 22:43:12</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">223</field>
