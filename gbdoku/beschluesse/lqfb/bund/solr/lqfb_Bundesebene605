    <field name="title">Kunsturhebergesetz unberührt lassen</field>
    <field name="date">4 Jahrs 5 Monaten 24 Tagen 14:31:56</field>
    <field name="area">Digitales, Urheber-/Patentrecht, Datenschutz</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">275</field>
