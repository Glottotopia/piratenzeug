    <field name="title">Nachwahl und Abwahl von einzelnen Vorstandsmitgliedern</field>
    <field name="date">1 Jahr 10 Monaten 27 Tagen 13:49:40</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Satzungsänderung </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">268</field>
    <field name="no">20</field>
