    <field name="title">Parlamentarisches Kontrollgremium für Rüstungsexporte</field>
    <field name="date">3 Jahrs 1 Monat 4 Tagen 00:01:33</field>
    <field name="area">Außen, Internationales, Frieden</field>
    <field name="regelwerk">Programmantrag </field>
