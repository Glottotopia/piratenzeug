    <field name="title">Wahlfreiheit für Familien statt staatlicher Bevormundung</field>
    <field name="date">2 Jahrs 4 Monaten 21 Tagen 20:11:44</field>
    <field name="area">Kinder, Jugend, Familie und Bildung</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">305</field>
