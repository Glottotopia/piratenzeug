    <field name="title">Wahlrecht ohne Altersgrenzen</field>
    <field name="date">3 Jahrs 3 Monaten 2 Tagen 09:43:54</field>
    <field name="area">Innen, Recht, Demokratie, Sicherheit</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">cross.png</field>
    <field name="yes">241</field>
