    <field name="title">Wahlprogrammantrag 1 Reform des Urheberrechts</field>
    <field name="date">2 Jahrs 4 Monaten 6 Tagen 12:26:45</field>
    <field name="area">Digitales, Urheber-/Patentrecht, Datenschutz</field>
