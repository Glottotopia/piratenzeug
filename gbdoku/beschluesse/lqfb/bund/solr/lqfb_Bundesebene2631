    <field name="title">5% Mandatsträgerabgabe an Partei oder gemeinnützigen Verein</field>
    <field name="date">2 Jahrs 9 Monaten 13 Tagen 13:31:26</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Satzungsänderung </field>
    <field name="result">cross.png</field>
    <field name="yes">258</field>
    <field name="no">79</field>
    <field name="abstention">379</field>
