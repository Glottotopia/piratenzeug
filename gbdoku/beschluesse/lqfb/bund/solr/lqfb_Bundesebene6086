    <field name="title">Sofortmaßnahmen zur Einführung eines menschenwürdiges Pflegewesens</field>
    <field name="date">1 Jahr 10 Monaten 27 Tagen 13:30:57</field>
    <field name="area">Gesundheit und Drogen/Suchtpolitik</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">cross.png</field>
    <field name="yes">161</field>
