    <field name="ID">lqfb_Bundesebene5654</field>
    <field name="title">Medienpolitische Position zur Haushaltsabgabe</field>
    <field name="date">2 Jahrs 29 Tagen 16:50:50</field>
    <field name="area">Kultur</field>
