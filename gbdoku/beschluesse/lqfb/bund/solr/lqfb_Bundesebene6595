    <field name="title">Anpassung von § 13 Bundessatzung</field>
    <field name="date">9 Monaten 14 Tagen 12:05:59</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Satzungsänderung </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">61</field>
    <field name="no">3</field>
    <field name="abstention">16</field>
