    <field name="title">Mehr Kreisverkehr an Stelle von Ampelanlagen</field>
    <field name="date">2 Jahrs 10 Monaten 9 Tagen 09:12:57</field>
    <field name="area">Umwelt, Verkehr, Energie</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">412</field>
    <field name="no">55</field>
