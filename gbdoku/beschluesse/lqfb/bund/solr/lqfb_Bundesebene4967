    <field name="title">[PPEU] Programmkompetenz einer Europäischen Piratenpartei</field>
    <field name="date">2 Jahrs 3 Monaten 13 Tagen 16:07:45</field>
    <field name="area">Außen, Internationales, Frieden</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_silver_2.png</field>
