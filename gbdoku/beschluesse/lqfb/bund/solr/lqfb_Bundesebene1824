    <field name="title">Alle Menschen können Piraten sein</field>
    <field name="date">3 Jahrs 3 Monaten 2 Tagen 09:29:46</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Satzungsänderung </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">390</field>
    <field name="no">41</field>
