    <field name="title">Stellungnahmen statt nur Beantwortung von Fragen</field>
    <field name="date">2 Jahrs 10 Monaten 9 Tagen 21:19:13</field>
    <field name="area">Sonstige innerparteiliche Angelegenheiten</field>
    <field name="regelwerk">sonstiger Parteitagsbeschluss </field>
    <field name="result">award_star_silver_2.png</field>
    <field name="yes">132</field>
    <field name="no">191</field>
