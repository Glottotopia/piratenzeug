    <field name="title">Mitbestimmung von Landesverbänden und Einberufung von Bundesparteitagen</field>
    <field name="date">1 Jahr 2 Monaten 4 Tagen 12:02:47</field>
    <field name="area">Satzung und Parteistruktur</field>
    <field name="regelwerk">Satzungsänderung </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">46</field>
    <field name="no">7</field>
