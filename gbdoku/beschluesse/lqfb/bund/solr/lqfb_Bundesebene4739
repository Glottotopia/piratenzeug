    <field name="ID">lqfb_Bundesebene4739</field>
    <field name="title">Beseitigung der kalten Progression</field>
    <field name="date">2 Jahrs 4 Monaten 6 Tagen 12:47:04</field>
    <field name="area">Arbeit und Soziales</field>
    <field name="regelwerk">Programmantrag </field>
    <field name="result">award_star_gold_2.png</field>
