    <field name="title">Antragsreihenfolge durch erweitertes Losverfahren</field>
    <field name="date">3 Jahrs 3 Monaten 15 Tagen 01:54:48</field>
    <field name="area">Sonstige innerparteiliche Angelegenheiten</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
