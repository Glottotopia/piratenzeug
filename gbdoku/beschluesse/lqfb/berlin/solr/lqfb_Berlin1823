    <field name="title">GSW - Transparenz über Privatisierung - Mieterschutz</field>
    <field name="date">2 Jahrs 7 Monaten 13 Tagen 01:16:01</field>
    <field name="area">Wirtschaft und Soziales</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">96</field>
