    <field name="title">Abstimmung beim Eilantrag verlängern</field>
    <field name="date">5 Jahrs 2 Monaten 3 Tagen 06:53:45</field>
    <field name="area">Liquid Democracy Systembetrieb</field>
    <field name="regelwerk">Eilantrag (ca. 4-5 Tage) </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">30</field>
    <field name="no">8</field>
