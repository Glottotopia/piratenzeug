    <field name="title">Verwertungsrechte an Verwertungspflicht binden</field>
    <field name="date">5 Jahrs 1 Monat 3 Tagen 13:09:06</field>
    <field name="area">Urheberrecht</field>
    <field name="regelwerk">Standardverfahren (ca. 1 Monat) </field>
    <field name="result">award_star_gold_2.png</field>
