    <field name="title">Keine Einreichungsfristen für Anträge und Bewerbungen</field>
    <field name="date">5 Jahrs 20 Tagen 21:02:27</field>
    <field name="area">Satzung, Parteistruktur und GO der LMV</field>
    <field name="regelwerk">Langzeitdiskussion (ca. 6 Monate) </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">73</field>
    <field name="no">2</field>
