    <field name="title">Verfassungsschutz abschaffen</field>
    <field name="date">1 Jahr 5 Monaten 13 Tagen 00:43:13</field>
    <field name="area">Grundrechte, Datenschutz und Innere Sicherheit</field>
    <field name="regelwerk">Wahlprogramm (komplexe Initiative) </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">96</field>
