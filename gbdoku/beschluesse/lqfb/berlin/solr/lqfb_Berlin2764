    <field name="title">Ombudsleute für das JobCenter Pankow</field>
    <field name="date">1 Jahr 1 Monat 13 Tagen 01:26:36</field>
    <field name="area">sonstige politische Themen</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
