    <field name="title">Keine Kommentarfunktion bei Abstimmungen</field>
    <field name="date">5 Jahrs 22 Tagen 10:46:24</field>
    <field name="area">Liquid Democracy Systembetrieb</field>
    <field name="regelwerk">Standardverfahren (ca. 1 Monat) </field>
