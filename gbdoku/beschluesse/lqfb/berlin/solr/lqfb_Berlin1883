    <field name="title">Fundraising durch die Bezirke</field>
    <field name="date">2 Jahrs 6 Monaten 27 Tagen 08:06:16</field>
    <field name="area">innerparteiliche Finanzen</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
