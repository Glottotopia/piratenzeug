    <field name="title">Begrenzung der Schutzfristen im Verwertungsrecht ja, aber deutlich längere Fristen</field>
    <field name="date">5 Jahrs 1 Monat 8 Tagen 07:33:15</field>
    <field name="area">Urheberrecht</field>
    <field name="regelwerk">Standardverfahren (ca. 1 Monat) </field>
    <field name="result">award_star_silver_2.png</field>
    <field name="yes">34</field>
    <field name="no">18</field>
