    <field name="title">S-Bahn Zeit zum Handeln - Gutachten veröffentlichen - Teilausschreibung vorbereiten - landeseigenen Fuhrpark aufbauen</field>
    <field name="date">3 Jahrs 1 Monat 10 Tagen 01:22:20</field>
    <field name="area">Stadtentwicklung, Bau und Verkehr</field>
    <field name="regelwerk">Schnellverfahren </field>
    <field name="result">cross.png</field>
    <field name="yes">40</field>
