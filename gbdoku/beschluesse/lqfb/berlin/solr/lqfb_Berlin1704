    <field name="title">Mit Open Data zur intelligenten Mobilität</field>
    <field name="date">2 Jahrs 8 Monaten 12 Tagen 11:14:33</field>
    <field name="area">Stadtentwicklung, Bau und Verkehr</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">122</field>
    <field name="no">9</field>
