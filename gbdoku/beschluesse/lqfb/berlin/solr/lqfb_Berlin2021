    <field name="title">Bessere Qualität beim Schulessen – mehr Geld für die Bezirke</field>
    <field name="date">2 Jahrs 6 Monaten 6 Tagen 21:08:18</field>
    <field name="area">Bildung und Forschung</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_silver_2.png</field>
    <field name="yes">53</field>
    <field name="no">9</field>
