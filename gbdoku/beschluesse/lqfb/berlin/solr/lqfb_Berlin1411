    <field name="title">Einsetzung eines Ehrenrates im Abgeordnetenhaus</field>
    <field name="date">3 Jahrs 23 Tagen 14:06:29</field>
    <field name="area">sonstige politische Themen</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
