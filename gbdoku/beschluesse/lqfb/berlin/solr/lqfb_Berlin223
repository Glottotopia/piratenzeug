    <field name="title">Kein privater PKW-Verkehr innerhalb des S-Bahn Rings</field>
    <field name="date">5 Jahrs 23 Tagen 11:13:30</field>
    <field name="area">Stadtentwicklung, Bau und Verkehr</field>
    <field name="regelwerk">Standardverfahren (ca. 1 Monat) </field>
    <field name="result">cross.png</field>
    <field name="yes">39</field>
    <field name="no">8</field>
