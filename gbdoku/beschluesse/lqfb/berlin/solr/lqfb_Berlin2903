    <field name="title">Kein Verfassungsschutz an Berliner Schulen</field>
    <field name="date">8 Monaten 1 Tag 23:49:51</field>
    <field name="area">Bildung und Forschung</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
