    <field name="title">Kernthemen als programmatische Verpflichtung</field>
    <field name="date">4 Jahrs 9 Monaten 12 Tagen 19:39:23</field>
    <field name="area">sonstige innerparteiliche Angelegenheiten</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_silver_2.png</field>
