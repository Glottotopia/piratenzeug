    <field name="title">Abgeordnetenzahl in Verhältnis zu Einwohnern 150 000</field>
    <field name="date">3 Jahrs 2 Monaten 17 Tagen 11:14:49</field>
    <field name="area">sonstige politische Themen</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">cross.png</field>
