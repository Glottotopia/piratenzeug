    <field name="title">Änderung des Berliner Nichtraucherschutzgesetzes</field>
    <field name="date">2 Jahrs 8 Monaten 15 Tagen 17:13:45</field>
    <field name="area">Umwelt, Gesundheit und Ernährung</field>
    <field name="regelwerk">Wahlprogramm (Einzelforderungen und -module) </field>
    <field name="result">cross.png</field>
