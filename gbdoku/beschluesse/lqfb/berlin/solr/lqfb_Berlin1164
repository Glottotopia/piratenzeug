    <field name="title">Die Fraktion der Piratenpartei Berlin soll öffentlichen tagen. #Transparenz</field>
    <field name="date">3 Jahrs 5 Monaten 10 Tagen 11:33:03</field>
    <field name="area">sonstige innerparteiliche Angelegenheiten</field>
    <field name="regelwerk">Schnellverfahren </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">59</field>
    <field name="no">10</field>
