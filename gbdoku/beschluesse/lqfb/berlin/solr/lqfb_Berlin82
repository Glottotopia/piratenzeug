    <field name="title">Wider den Landesrat</field>
    <field name="date">5 Jahrs 20 Tagen 21:00:10</field>
    <field name="area">Satzung, Parteistruktur und GO der LMV</field>
    <field name="regelwerk">Langzeitdiskussion (ca. 6 Monate) </field>
    <field name="result">award_star_gold_2.png</field>
    <field name="yes">68</field>
    <field name="no">8</field>
    <field name="abstention">11</field>
