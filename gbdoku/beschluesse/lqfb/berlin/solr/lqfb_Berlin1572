    <field name="title">Streichung des Parteiausschluss aus der Berliner Landessatzung</field>
    <field name="date">2 Jahrs 9 Monaten 28 Tagen 19:09:35</field>
    <field name="area">Satzung, Parteistruktur und GO der LMV</field>
    <field name="regelwerk">Satzungsänderung (Einzelbestimmungen) </field>
    <field name="result">cross.png</field>
    <field name="yes">48</field>
    <field name="no">26</field>
