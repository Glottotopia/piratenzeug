    <field name="title">Streichung der Geschäftsordnung fürs Liquid-Feedback</field>
    <field name="date">2 Jahrs 2 Monaten 29 Tagen 16:04:36</field>
    <field name="area">Liquid Democracy Systembetrieb</field>
    <field name="regelwerk">sonstiger LMV-Beschluss </field>
    <field name="result">award_star_gold_2.png</field>
