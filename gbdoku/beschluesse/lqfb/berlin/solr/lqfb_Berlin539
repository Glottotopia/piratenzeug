    <field name="title">Downloadfunktion aktivieren UND Schnittstelle für Zugriff auf aktuellen Datenbestand bereitstellen</field>
    <field name="date">4 Jahrs 11 Monaten 10 Tagen 07:09:01</field>
    <field name="area">Liquid Democracy Systembetrieb</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
