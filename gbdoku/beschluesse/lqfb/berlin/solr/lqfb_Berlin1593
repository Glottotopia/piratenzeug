    <field name="title">Verhaltenskodex für Abgeordnete und Senatoren</field>
    <field name="date">2 Jahrs 10 Monaten 6 Tagen 09:31:23</field>
    <field name="area">Tagespolitik</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
    <field name="result">award_star_gold_2.png</field>
