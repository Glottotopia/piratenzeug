    <field name="title">Kein Rückkauf, sondern Rückabwicklung</field>
    <field name="date">2 Jahrs 8 Monaten 13 Tagen 21:01:32</field>
    <field name="area">Tagespolitik</field>
    <field name="regelwerk">Meinungsbild / Beschlussvorlage </field>
